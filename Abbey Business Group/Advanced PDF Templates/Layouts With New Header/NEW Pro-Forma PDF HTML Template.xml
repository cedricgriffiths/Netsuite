<?xml version="1.0"?><!DOCTYPE pdf PUBLIC "-//big.faceless.org//report" "report-1.1.dtd">
<pdf>
<head>
<#if .locale == "ru_RU">
    <link name="verdana" type="font" subtype="opentype" src="${nsfont.verdana}" src-bold="${nsfont.verdana_bold}" bytes="2" />
</#if>
    <macrolist>
        <macro id="nlheader">
            <table class="header" style="width: 100%;">
     <tr>
	<td align="left" ><img src="https://system.eu2.netsuite.com/core/media/media.nl?id=150924&amp;c=4524752&amp;h=f53e69166e2c78a179cb" style="float: left; width:710px; height:75px;" /></td>
	</tr>
	<tr>
      <td>&nbsp;</td>
    </tr>         
            
	<tr>
	<td rowspan="8"><span class="nameandaddress">${companyInformation.addressText}</span></td>
	<td align="right">Order Number</td>
	<td align="right">${record.tranid}</td>
	</tr>
	<tr>
	<td align="right">Order Date</td>
	<td align="right">${record.trandate}</td>
	</tr>
	<tr>
	<td align="right">${record.shipdate@label}</td>
	<td align="right">${record.shipdate}</td>
	</tr>
	<tr>
	<td align="right">${record.otherrefnum@label}</td>
	<td align="right">${record.otherrefnum}</td>
	</tr>
	<tr>
	<td align="right">${record.custbody_cseg_bbs_project_no@label}</td>
	<td align="right">${record.custbody_cseg_bbs_project_no}</td>
	</tr>
	<tr>
	<td align="right">${record.custbody_bbs_so_project_text@label}</td>
	<td align="right">${record.custbody_bbs_so_project_text}</td>
	</tr></table>
        </macro>
        
    <macro id="nlfooter">
      
      <table class="total" style="width: 100%;"><tr class="totalrow">
    <td colspan="2" background-color="#ffffff" style="font-size: 7pt;">Terms: Nett 30 Days E&amp;OE</td>
	<td background-color="#ffffff" colspan="4">&nbsp;</td>
	<td align="right"><b>${record.subtotal@label}</b></td>
	<td align="right" background-color="#ffffff">${record.subtotal}</td>
	</tr>
	<tr class="totalrow">
    <td colspan="2" rowspan="2" background-color="#ffffff" style="line-height: 100%; font-size: 7pt; color: red;">We prefer payment via BACS<br/>Santander UK Plc.<br/>Bridle Road, Bootle,<br/>Merseyside L30 4GB<br/>Account No: 10790832<br/>Sort Code: 09-02-22</td>
	<td background-color="#ffffff" colspan="4">&nbsp;</td>
	<td align="right"><b>${record.taxtotal@label}</b></td>
	<td align="right" background-color="#ffffff">${record.taxtotal}</td>
	</tr>
	<tr class="totalrow">
      
	<td background-color="#ffffff" colspan="4">&nbsp;</td>
	<td align="right"><b>${record.total@label}</b></td>
	<td align="right" background-color="#ffffff">${record.total}</td>
	</tr>
	<tr>
	<td>&nbsp;</td>
	</tr></table>
      
    <table style="width: 100%;">
	<tr class="messagerow">
	<td class="message" style="font-size: 5pt"><b>ABBEY BUSINESS INTERIORS LIMITED RETAINS THE TITLE TO THE GOODS SUPPLIED UNTIL FULL PAYMENT HAS BEEN RECEIVED. HOWEVER RISK PASSES ON DELIVERY TO YOURSELVES</b></td>
	</tr>
    </table>

<table class="footer" style="width: 100%;"><tr>
    <td align="left" colspan="3" style="font-size: 5pt">REG. COMPANY NO. 08914340 REG OFFICE: 23 Neptune Business Centre, Tewkesbury Road, Cheltenham, Gloucestershire. GL51 9FB VAT REG. No. 315 5984 82</td>
	<td align="right"><pagenumber/> of <totalpages/></td>
	</tr></table>

        </macro>
    </macrolist>
    <style type="text/css">table {
            font-family: sans-serif;
            font-size: 9pt;
            table-layout: fixed;
        }
        th {
            font-weight: bold;
            font-size: 8pt;
            padding: 0px;
            background-color: #e3e3e3;
            color: #333333;
        }
        td {
            padding: 0px;
            vertical-align: middle;
            font-size:12px;
        }
        b {
            font-weight: bold;
            color: #333333;
        }
        table.header td {
            padding: 0px;
            
            font-size: 10pt;
        }
        table.footer td {
            padding: 0;
            font-size: 8pt;
        }
        table.itemtable th {
            padding-bottom: 0px;
            padding-top: 0px;
        }
        table.body td {
            padding-top: 0px;
        }
        table.total {
            page-break-inside: avoid;
        }
      table.message{
        border: 1px solid #dddddd;
      }
        tr.totalrow {
            background-color: #e3e3e3;
            line-height: 200%;
        }
      tr.messagerow{
        border: 2px solid #dddddd;
      }
        td.totalboxtop {
            font-size: 12pt;
            background-color: #e3e3e3;
        }
        td.addressheader {
            font-size: 12pt;
            padding-top: 0px;
            padding-bottom: 0px;
        }
        td.address {
            padding-top: 0;
        }
        td.totalboxmid {
            font-size: 28pt;
            padding-top: 20px;
            background-color: #e3e3e3;
        }
      td.message{
        border: 2px solid #dddddd;
      }
        td.totalboxbot {
            background-color: #e3e3e3;
            font-weight: bold;
        }
        span.title {
            font-size: 28pt;
        }
        span.number {
            font-size: 16pt;
        }
        span.itemname {
            font-weight: bold;
            line-height: 150%;
        }
        hr {
            width: 100%;
            color: #d3d3d3;
            background-color: #d3d3d3;
            height: 1px;
        }
</style>
</head>
<body header="nlheader" header-height="20%" footer="nlfooter" footer-height="130px" padding="0.2cm 0.5cm 0.2cm 0.5cm" size="A4">
    <table style="width: 100%;"><tr>
	<td class="addressheader">Deliver To:</td>
	<td class="addressheader">Invoice To:</td>
	</tr>
	<tr>
	<td class="address">${record.shipaddress}</td>
	<td class="address">${record.billaddress}</td>
	</tr>
	<tr>
	<td class="address">&nbsp;</td>
	<td class="address">&nbsp;</td>
	</tr>
	<tr>
	<td class="address">&nbsp;</td>
	<td class="address">&nbsp;</td>
	</tr></table>
<#if record.item?has_content>

<table class="itemtable" style="width: 100%;"><!-- start items --><#list record.item as item><#if item_index==0>
<thead>
	<tr>
	<th align="center" colspan="3">${item.quantity@label}</th>
    <th align="center" colspan="3">${item.custcol_bbs_quote_cad@label}</th>
	<th align="left" colspan="3">${item.units@label}</th>
	<th colspan="12">${item.item@label}</th>
	<th align="right" colspan="4">Unit Price</th>
	<th align="right" colspan="4">${item.amount@label}</th>
	</tr>
</thead>
</#if>
  <#if item.custcol_bbs_sales_print>

  <tr>
	<td align="center" colspan="3" line-height="150%">${item.quantity}</td>
    <td align="left" colspan="3">${item.custcol_bbs_quote_cad}</td>
	<td align="left" colspan="3">${item.units}</td>
    <#if item.custcol_bbs_sales_generic_desc == "">
      <td colspan="12">&nbsp;</td>
      <#else>
        <#if item.item == "Disclaimer">
          <td colspan="12" font-weight="bold">${item.custcol_bbs_sales_generic_desc}</td>
          <#else>
            <td colspan="12">${item.custcol_bbs_sales_generic_desc}</td>
          </#if>
        
      </#if>
	
	<td align="right" colspan="4">${item.rate}</td>
	<td align="right" colspan="4">${item.amount}</td>
	</tr>

	</#if>
  </#list><!-- end items --></table>
</#if>

<hr />

</body>
</pdf>